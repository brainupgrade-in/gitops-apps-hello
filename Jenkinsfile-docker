pipeline {
  agent any


  stages {
    
    stage('Build Image') {
      steps {
      sh "docker build -t brainupgrade/gitops-apps-hello:${env.BUILD_ID} ."
      sh "docker tag brainupgrade/gitops-apps-hello:${env.BUILD_ID} brainupgrade/gitops-apps-hello:latest"
      }
    }
    
  }

  post {
    always {
      archive 'target/**/*.jar'
    }
    success {
      withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
        sh "docker login -u ${USERNAME} -p ${PASSWORD}"
        sh "docker push brainupgrade/gitops-apps-hello:${env.BUILD_ID}"
        sh "docker push brainupgrade/gitops-apps-hello:latest"
      }
    }
  }
}
